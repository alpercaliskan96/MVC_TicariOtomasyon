@using MVC_TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Satışlar Sayfası</h2>
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>Satış ID</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Adet</th>
            <th>Birim Fiyat</th>
            <th>Total Fiyat</th>
            <th>Satın Alan Kişi</th>
            <th>Satış Yapan Personel</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.SatisID</td>
            <td>@k.Urunler.UrunAd</td>
            <td>@k.Urunler.Marka</td>
            <td>@k.Adet</td>
            <td>@k.Fiyat</td>
            <td>@k.ToplamTutar</td>
            <td>@k.Cari.CariAd @k.Cari.CariSoyad</td>
            <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
            <td>@k.Tarih</td>
            <td><a href="/Satis/SatisGetir/@k.SatisID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@k.SatisID" class="btn btn-danger" style="background-color:orangered;">Detay</a></td>
        </tr>
    }
</table>

<a href="/Satis/SatisEkle" class="btn btn-primary">Yeni Satış Ekle</a>

@*CSS PART*@
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" />

@*JS PART*@
<script src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
        crossorigin="anonymous"></script>
<script type="text/javascript" src="~/Content/DataTables/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="~/Content/DataTables/js/dataTables.bootstrap4.min.js"></script>


<script>
    $('#tbl1').DataTable();
</script>
