@model MVC_TicariOtomasyon.Models.Siniflar.Urunler
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yeni Ürün Ekleme Sayfası</h2>

<form method="post" class="form-group">
    @Html.HiddenFor(x => x.KategoriID)
    @Html.LabelFor(x => x.UrunAd)
    @Html.TextBoxFor(x => x.UrunAd, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.UrunAd, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.Marka)
    @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Marka, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.Stok)
    @Html.TextBoxFor(x => x.Stok, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Stok, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.AlisFiyati)
    @Html.TextBoxFor(x => x.AlisFiyati, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AlisFiyati, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.SatisFiyati)
    @Html.TextBoxFor(x => x.SatisFiyati, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.SatisFiyati, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.Durum)
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Durum, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.Kategori)
    @Html.DropDownListFor(x => x.KategoriID, (List<SelectListItem>)ViewBag.val, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.KategoriID, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.UrunGorsel)
    @Html.TextBoxFor(x => x.UrunGorsel, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.UrunGorsel, "", new { @style = "color:red" })
    <button class="btn btn-primary">Kaydet</button>
</form>
