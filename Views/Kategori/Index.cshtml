@using MVC_TicariOtomasyon.Models.Siniflar
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <table class="table table-bordered" style="margin-top:20px;">

        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.KategoriID</td>
                <td>@k.KategoriAd</td>
                <td><a href="/Kategori/KategoriDuzenle/@k.KategoriID" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Kategori/KategoriSil/@k.KategoriID" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </table>

    <a href="/Kategori/KategoriEkle" class="btn btn-primary">Kategori Ekle</a>
