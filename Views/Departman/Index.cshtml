@using MVC_TicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Departmanlar</h2>
<br />
<table id="tbl3" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Departman Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
            <th>Detay</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.DepartmanID</td>
            <td>@k.DepartmanAd</td>
            <td><a href="/Departman/DepartmanGetir/@k.DepartmanID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Departman/DepartmanSil/@k.DepartmanID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Departman/DepartmanDetay/@k.DepartmanID" class="btn btn-danger" style="background-color:dodgerblue">Departman Detay</a></td>
        </tr>
    }
</table>

<a href="/Departman/DepartmanEkle" class="btn btn-info">Departman Ekle</a>

@*CSS PART*@
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" />

@*JS PART*@
<script src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
        crossorigin="anonymous"></script>
<script type="text/javascript" src="~/Content/DataTables/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="~/Content/DataTables/js/dataTables.bootstrap4.min.js"></script>


<script>
    $('#tbl3').DataTable();
</script>
