@using MVC_TicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
} 
<h2>Departman Detay</h2> 
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı : @ViewBag.dN</li>
</ol>

<div></div>
<table class="table table-hover">
    <tr>
        <th>Personel ID</th>
        <th>Personel Ad</th>
        <th>Personel Soyad</th>
        <th>Personel Görsel</th>
        <th>Satışlar</th>
    </tr>
    @foreach(var k in Model) {
    <tr>
        <td>@k.PersonelID</td>
        <td>@k.PersonelAd</td>
        <td>@k.PersonelSoyad</td>
        <td>@k.PersonelGorsel</td>
        <td><a href="/Departman/PersonelSatisDetay/@k.PersonelID" class="btn btn-primary">Satışlar</a></td>
    </tr>
    }
</table>